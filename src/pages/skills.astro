---
import Layout from '../layouts/Layout.astro';
import { skills } from "../data/skills.ts";
import { courseworks } from "../data/coursework.ts";
---

<Layout>
  <div class="grid grid-cols-1 gap-8 p-8">
  <div class="mockup-browser bg-base-300 border">
    <div class="mockup-browser-toolbar">
      <div class="input">https://oggy/skills.com</div>
    </div>
    <div class="bg-base-200 flex justify-center px-4 py-16">
      <ul>
        {skills.map((skill) => (
          <li key={skill.id}>{skill.name}</li>
        ))}
      </ul>
    </div>
  </div>
  <br></br>
  <div class="mockup-browser bg-base-300 border">
    <div class="mockup-browser-toolbar">
      <div class="input">https://oggy/coursework.com</div>
    </div>
    <div class="bg-base-200 flex justify-center px-4 py-16">
      <ul>
        {courseworks.map((coursework) => (
          <li key={coursework.id}>{coursework.name}</li>
        ))}
      </ul>
    </div>
  </div>
  </div>
</Layout>