---
import Layout from '../layouts/Layout.astro';
import { experiences } from '../data/experience.ts';
import { educations } from '../data/education.ts';
---

<Layout>
  <section class="max-w-5xl mx-auto px-6 py-12">
    <h1 class="text-4xl font-bold text-center text-vs-blue mb-6">About Me</h1>
    <p class="text-gray-400 text-center max-w-3xl mx-auto mb-12">
      Passionate developer with experience in building robust applications. 
      Always learning, always evolving.
    </p>

    <!-- Experience Section -->
    <div class="mb-16">
      <h2 class="text-3xl font-semibold text-center text-gray-300 mb-8 flex items-center justify-center">
        <svg class="w-8 h-8 mr-3 text-vs-blue" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 2a10 10 0 100 20 10 10 0 000-20zM9 11h2v6H9v-6zm4 0h2v6h-2v-6z"></path>
        </svg>
        Experience
      </h2>

      <div class="space-y-8">
        {experiences.map((experience, index) => (
          <div key={experience.id} class="bg-gray-900 bg-opacity-70 p-6 rounded-2xl shadow-lg border border-gray-800 hover:scale-[1.02] transition-transform">
            <time class="text-sm text-gray-500">{experience.year}</time>
            <h3 class="text-xl font-bold text-vs-blue">{experience.title}</h3>
            <p class="text-gray-400">{experience.description}</p>
          </div>
        ))}
      </div>
    </div>

    <!-- Education Section -->
    <div>
      <h2 class="text-3xl font-semibold text-center text-gray-300 mb-8 flex items-center justify-center">
        <svg class="w-8 h-8 mr-3 text-vs-blue" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 2L1 7l11 5 9-4V9l-9 4-11-5v10l11 5 9-4v-8"></path>
        </svg>
        Education
      </h2>

      <div class="space-y-8">
        {educations.map((education, index) => (
          <div key={education.id} class="bg-gray-900 bg-opacity-70 p-6 rounded-2xl shadow-lg border border-gray-800 hover:scale-[1.02] transition-transform">
            <time class="text-sm text-gray-500">{education.year}</time>
            <h3 class="text-xl font-bold text-vs-blue">{education.title}</h3>
            <p class="text-gray-400">{education.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>
</Layout>
