---
const links = [
  { name: "Home", href: "/" },
  { name: "Projects", href: "/projects" },
  { name: "About", href: "/about" },
  { name: "Contact", href: "/contact" },
  { name: "Skills", href: "/skills" }
];
---
<nav class="bg-[#252526] text-white p-4 flex justify-between">
  <h1 class="text-xl font-bold">My Portfolio</h1>
  <ul class="flex gap-4">
    {links.map(link => (
      <li><a href={link.href} class="hover:text-blue-400">{link.name}</a></li>
    ))}
  </ul>
  <!-- Toggle Button for Geek Mode -->
  <div class="fixed top-4 right-4 z-50">
    <label class="label cursor-pointer">
      <span class="label-text text-white mr-2">Geek Mode</span>
      <input id="toggleGeekMode" type="checkbox" class="toggle toggle-primary" />
    </label>
  </div>
</nav>
